@model List<DataMseMVC.Model.MseData>

@{
    ViewData["Title"] = "MSE Data Table";
}

<div class="buttons-container">
    <button id="button1" class="btn btn-primary">
        <img class="button-icon" src="/assets/refresh_icon.png" /> Refresh Data
    </button>
    <button id="button2" class="btn btn-secondary">
        <img class="button-icon" src="/assets/export_icon.png" /> Export Data
    </button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Date</th>
            <th>Minimum</th>
            <th>Maximum</th>
            <th>Last Transaction</th>
            <th>Average Price</th>
            <th>Gain</th>
            <th>Volume</th>
            <th>Gain Best</th>
            <th>Total Gain</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.code</td>
                    <td>@item.date.ToString("dd-MM-yyyy")</td>
                    <td>@item.minimum</td>
                    <td>@item.maximum</td>
                    <td>@item.last_transaction</td>
                    <td>@item.average_price</td>
                    <td>@item.gain</td>
                    <td>@item.volume</td>
                    <td>@item.gain_best</td>
                    <td>@item.total_gain</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center">No data available</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-container">
    <ul class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("AllData", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize })">Previous</a>
            </li>
        }
        @for (var i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("AllData", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
            </li>
        }
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("AllData", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize })">Next</a>
            </li>
        }
    </ul>
</div>

<style>

    .buttons-container {
        font-family: "Montserrat", sans-serif;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        font-size: 10px !important;
    }


    #button1 {
        background-color: #000;
        color: white;
    }

        #button1:hover {
            background-color: #333;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
        }

    #button2 {
        background-color: #fff;
        color: black;
        border: 1px solid #000;
    }

        #button2:hover {
            background-color: #f0f0f0;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
        }

    .button-icon {
        width: 20px;
        height: 20px;
        margin-right: 2px;
        margin-bottom: 3px;
    }

        table th, table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        table th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        table tr:hover {
            background-color: #e9e9e9;
        }

    .pagination {
        list-style: none;
        padding: 0;
        display: inline-flex;
    }

        .pagination li {
            margin: 0 5px;
        }

        .pagination a {
            text-decoration: none;
            color: #4a90e2;
            padding: 8px 12px;
            border: 1px solid #4a90e2;
            border-radius: 5px;
        }

        .pagination .active a {
            background-color: #4a90e2;
            color: white;
            border-color: #4a90e2;
        }

        .pagination a:hover {
            background-color: #f4f4f4;
        }

    body {
        font-family: "Montserrat", sans-serif;
        background-color: #f7f7f7;
        color: #333;
        padding-left: 0;
    }

    .buttons-container {
        text-align: left;
        margin-bottom: 20px;
    }

    button {
        width: 170px;
        height: 35px;
        font-weight: bold;
        text-align: center;
        margin: 10px;
        padding: 5px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        display: inline-flex; 
        align-items: center;
        justify-content: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .pagination-container {
        margin-top: 20px;
        text-align: center;
    }

</style>
